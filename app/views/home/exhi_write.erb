<div class="container" style="min-height:1100px; margin-top:70px;">
   <div class="main_title normal-font" >
        <h2 style="text-align:left;">행사 추가</h2>
   </div>
     <form action= "/home/exhi_upload" method= "POST"  enctype="multipart/form-data" accept-charset="UTF-8">
         <div class="mir_input_div">
             <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
             <div class="mir_input1">
                 <input type="text" placeholder="행사 제목을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="name">
             </div>
             <div class="mir_input1">
                <input type="text" placeholder="중문 행사 이름을 입력해주세요" style="padding-left:10px;" class="inquire_name" name="name_c">
             </div>
             <div class="mir_input_file">
                <input type="file" placeholder="포스터 사진을 업로드 해주세요"  style="padding-left:10px;" class="inquire_file" name="title_pic">
             </div>
             <div class="mir_input1">
                 <select class="form-control" name="condition" style="margin-left:15px; width:80%; margin-top:10px;">
            	  <option>current</option>
            	  <option>upcoming</option>
            	  <option>past</option>
            	</select>
             </div>
             <div class="mir_input1">
                 <p class="date_title">행사 시작 날짜</p>
                  <div id="datepicker_sta" class="input-group date date_mir" data-date-format="yyyy-mm-dd">
                        <input class="form-control" name="period_sta" style="background-color:white;" type="text" readonly />
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                  </div>
             </div>
             <div class="mir_input1">
                  <p class="date_title">행사 종료 날짜</p>
                  <div id="datepicker_end" class="input-group date date_mir" data-date-format="yyyy-mm-dd">
                        <input class="form-control" name="period_end" style="background-color:white;" type="text" readonly />
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                  </div>
             </div>
             <div class="mir_input2">
                <textarea rows="10" placeholder="내용을 입력해주세요" style="padding-left:10px;" class="inquire_content" name="content"></textarea>
             </div>
             <div class="mir_input2">
                <textarea rows="10" placeholder="중문 내용을 입력해주세요" style="padding-left:10px;" class="inquire_content" name="contentc"></textarea>
             </div>
              <button type="submit" class="btn btn-success" style="margin:10px auto">등록하기</button>
         </div>
     </form>
</div>
<%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js" %>
<%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" %>

<script>
$(function () {
  $("#datepicker_sta").datepicker({
        autoclose: true,
        todayHighlight: true
  }).datepicker('update', new Date());;
});

$(function () {
  $("#datepicker_end").datepicker({
        autoclose: true,
        todayHighlight: true
  }).datepicker('update', new Date());;
});
</script>